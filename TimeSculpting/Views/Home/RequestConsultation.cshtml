@model TimeSculpting.Models.ConsultationRequest



<form id="consultationRequestForm" method="post">
    <div class="col-xs-12">
        <h3>Request a Free Consulation</h3>
    </div>
    <div class="col-md-6">

        <div class="consultationRequestFormContainer">
            @Html.AntiForgeryToken()
            @*<label for="EmailAddress"></label>*@
            @*<input type="email" id="EmailAddress" name="EmailAddress" class="form-control" placeholder="Email Address"/>*@

            <div class="tsFieldContainer">
                @*@{

                // field/property is 'required', mark assiciated label accordingly.
                // map this behavior as an inheritable property in TS Library


                var tsRequired = Model.ConsultationRequest.EmailAddress
            }*@
                @Html.LabelFor(m => m.EmailAddress)
                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Email Address" })
                @Html.ValidationMessageFor(m => m.EmailAddress)


            </div>

            <div class="tsFieldContainer">
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone Number" })
                @Html.ValidationMessageFor(m => m.Phone)
            </div>


            @*<div class="tsFieldContainer">
                @Html.LabelFor(m => m.Address2)
                @Html.TextBoxFor(m => m.Address2, new { required = "required", @class = "form-control", placeholder = "Address Line 2" })
                @Html.ValidationMessageFor(m => m.Address2)
            </div>*@

        </div>
    </div>
    <div class="col-md-6">
        <div class="tsFieldContainer">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { required = "required", @class = "form-control", placeholder = "Description", @rows = 4 })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>

    <div class="col-xs-12">
        <button id="SendConsultationRequest" type="button" class="btn btn-success">Let's get started!</button>
        @*@Html.Captcha(exampleCaptcha)
            @Html.TextBox("CaptchaCode")*@
    </div>
    <div class="clearfix"></div>

